# n8n Gmail AI Agent - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Bright Data API
BRIGHTDATA_BEARER_TOKEN=your_brightdata_bearer_token_here
BRIGHTDATA_LINKEDIN_DATASET_ID=your_linkedin_dataset_id
BRIGHTDATA_GLASSDOOR_DATASET_ID=your_glassdoor_dataset_id
BRIGHTDATA_INDEED_DATASET_ID=your_indeed_dataset_id

# Notion
NOTION_API_TOKEN=your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Gmail
GMAIL_LABEL_ID=your_gmail_label_id_here

# n8n Credential IDs (obtained after setting up credentials in n8n)
N8N_OPENAI_CREDENTIAL_ID=your_n8n_openai_credential_id
N8N_GMAIL_CREDENTIAL_ID=your_n8n_gmail_credential_id
N8N_NOTION_CREDENTIAL_ID=your_n8n_notion_credential_id
